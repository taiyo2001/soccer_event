<div>
  <h2 class="font-bold text-3xl">イベント一覧</h2>
  <div>
    <%= search_form_for @q, url: events_path do |f| %>
      <%= f.label :name_cont, 'フリーワード' %>
      <%= f.search_field :name_or_address_or_place_cont %>
      <%= f.label :zipcode_prefecture_name_eq, '都道府県', class: 'p-2' %>
      <%= f.collection_select :zipcode_prefecture_name_eq, @prefectures, :name, :name, { include_blank: '選択してください' },
                              { class: 'p-2' } %>
      <%= f.label :held_at_cont, '開催日' %>
      <%= f.date_field :held_at_gteq, class: '' %>
      <span>~</span>
      <%= f.date_field :held_at_lteq_end_of_day, class: '' %>
      <%= f.label :price_gteq, '参加費用' %>
      <%= f.number_field :price_gteq %>
      <span>~</span>
      <%= f.number_field :price_lteq %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
  <div class="bg-gray-300 border w-full p-20">
    <h3>募集中</h3>
    <% @events.each do |event| %>
      <div class="mb-4">
        <%= render 'atoms/event_content', event: %>
      </div>
    <% end %>
  </div>
</div>
