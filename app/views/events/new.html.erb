<div class="p-2 flex flex-col">
  <%= form_with(model: @event, url: events_path, method: :post, data: { turbo: false }, html: { class: 'h-full' }) do |form| %>
    <%# <%= render partial: 'form', locals: { form: } %> %>
    <% if @event.errors.any? %>
      <div>
        <p>エラーが発生しました:</p>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="">
      <%= form.text_field :name,
                      placeholder: 'イベント名',
                      class: 'rounded py-1 mb-2 w-full outline-none font-bold text-2xl' %>
      <%= form.number_field :zipcode,
                      placeholder: '郵便番号',
                      class: 'rounded py-1 mb-2 w-full' %>
      <%= form.submit '住所検索', name: 'search_address', class: 'font-bold text-white bg-blue-500 border border-green-500 p-2 rounded-lg cursor-pointer' %>
      <%= form.number_field :zipcode_address,
                      placeholder: '',
                      class: 'rounded py-1 mb-2 w-full',
                      readonly: true %>
      <div class="field">
        <%= form.label :address %><br>
        <%= form.text_field :address %>
      </div>
      <%= form.number_field :price,
                      placeholder: '参加費用',
                      class: 'rounded py-1 mb-2 w-full' %>
      <%= form.number_field :people_limit,
                      placeholder: '人数制限',
                      class: 'rounded py-1 mb-2 w-full' %>
      <%= form.text_area :description,
                     placeholder: '詳細',
                     class: 'rounded py-1 mb-2 w-full h-full' %>
      <div class="flex">
        <div class="flex w-1/2">
          <%= form.label :held_at, '開催日時' %>
          <%= form.datetime_field :held_at,
                     placeholder: '開催日時',
                     class: 'rounded py-1 mb-2 w-full' %>
        </div>
        <div class="flex w-1/2">
          <%= form.label :held_at, '申込締切日時' %>
          <%= form.datetime_field :deadline_at,
                     placeholder: '申込締切日時',
                     class: 'rounded py-1 mb-2 w-full' %>
        </div>
      </div>
    </div>
    <div class="">
      <%= form.submit '作成', class: 'font-bold text-white bg-blue-500 border border-green-500 p-2 rounded-lg cursor-pointer' %>
    </div>
  <% end %>
</div>
