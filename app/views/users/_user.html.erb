<div class="p-5">
  <% if user.image.attached? %>
    <div class="flex justify-center">
      <%= image_tag(user.image.variant(resize_to_limit: [100, 100])) %>
    </div>
  <% end %>

  <p>
    <strong>名前:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Eメール:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>年齢:</strong>
    <%= user.age %>
  </p>

  <p>
    <strong>性別</strong>
    <%= user.gender %>
  </p>
</div>
