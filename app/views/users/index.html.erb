<div class="h-screen w-screen flex justify-center -mt-20">
  <div class="flex flex-col">
    <div class="mb-3">
      <h1 class="text-3xl">ユーザー一覧</h1>
    </div>

    <div class="flex flex-wrap">
      <% @users.each do |user| %>
        <div class="w-1/4">
          <div class="border m-3">
            <%= render user %>

            <div class="text-right p-2">
              <%= link_to "#{user.name}の詳細", user_path(user), class: 'font-medium text-blue-600 dark:text-blue-500 hover:underline text-right block' %>
            </div class="text-right">
          </div>
        </div>
      <% end %>
    </div>

    <div class="flex justify-center">
      <%= paginate @users %>
    </div>
  </div>
</div>
