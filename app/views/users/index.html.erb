<div class="flex justify-center">
  <div class="flex flex-col">
    <div class="mb-3">
      <h1 class="text-3xl">ユーザー一覧</h1>
    </div>
    <div class="flex flex-wrap">
      <% @users.each do |user| %>
        <div class="w-1/4">
          <div class="border m-3">
            <div class="p-5">
              <div class="flex justify-center">
                <div class="mx-2 rounded-full overflow-hidden w-20 h-20 block">
                  <% if user.image.attached? %>
                    <%= image_tag user.image, class: 'w-full h-full object-cover' %>
                  <% else %>
                    <div class='w-full h-full object-cover bg-gray-300'></div>
                  <% end %>
                </div>
              </div>
              <p>
                <strong>名前:</strong>
                <%= user.name %>
              </p>
              <p>
                <strong>Eメール:</strong>
                <%= user.email %>
              </p>
              <p>
                <strong>年齢:</strong>
                <%= user.age %>
              </p>
              <p>
                <strong>性別</strong>
                <%= user.gender %>
              </p>
            </div>
            <div class="text-right p-2">
              <%= link_to "#{user.name}の詳細", user_path(user), class: 'font-medium text-blue-600 dark:text-blue-500 hover:underline text-right block' %>
            </div class="text-right">
          </div>
        </div>
      <% end %>
    </div>
    <div class="flex justify-center">
      <%= paginate @users %>
    </div>
  </div>
</div>
