<div class="h-screen w-screen flex justify-center">
  <div class="flex flex-col">
    <div class="mb-3">
      <h2 class="text-3xl">
        <%= t('.sign_up') %>
      </h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'devise/shared/error_messages', resource: %>

      <div class="mb-2 field">
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="mb-2 field">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
      </div>

      <div class="mb-2 field">
        <%= f.label :age %><br>
        <%= f.text_field :age, autofocus: true %>
      </div>

      <div class="mb-2 field">
        <%= f.label :gender %><br>
        <%= f.select :gender, { '男性': 'man', '女性': 'woman', '選択しない': 'no gender' }, { include_blank: '選択してください' }, autofocus: true %>
      </div>

      <div class="mb-2 field">
        <%= f.label :favorite_team %><br>
        <%# TODO: 正しいデータをセットする %>
        <%= f.select :favorite_team_id, { 'バルセロナ': 1, 'レアル・マドリード': 2 }, { include_blank: '選択してください' }, autofocus: true %>
      </div>

      <div class="mb-2 field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br>
        <%= f.password_field :password, autocomplete: 'new-password' %>
      </div>

      <div class="mb-3 field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
      </div>

      <div class="mb-3 flex justify-center">
        <%= f.submit t('.sign_up'), class: 'bg-blue-700 hover:bg-blue-600 text-white rounded px-4 py-2 mr-2' %>
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: 'bg-gray-600 hover:bg-gray-500 text-white rounded px-4 py-2 ml-1' %>
      </div>
    <% end %>
  </div>
</div>
