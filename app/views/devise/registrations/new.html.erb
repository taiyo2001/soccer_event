<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'devise/shared/error_messages', resource: %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
  </div>

  <div class="field">
    <%= f.label :age %><br>
    <%= f.text_field :age, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :gender %><br>
    <%# TODO: 正しいデータをセットする %>
    <%= f.select :gender, { '男性': 'man', '女性': 'woman', '選択しない': 'no gender' }, { include_blank: '選択してください' }, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :favorite_team %><br>
    <%# TODO: 正しいデータをセットする %>
    <%= f.select :favorite_team_id, { 'バルセロナ': 1, 'レアル・マドリード': 2 }, { include_blank: '選択してください' }, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: 'new-password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
