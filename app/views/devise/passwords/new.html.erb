<div class="h-screen w-screen flex justify-center">
  <div class="flex flex-col">
    <div class="mb-3">
      <h2 class="text-3xl">
        <%= t('.forgot_your_password') %>
      </h2>
    </div>

    <div class="mb-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: %>

        <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
        </div>

        <div class="field">
          <p>「送信する」を押すと再設定メールが送信されます</p>
        </div>

        <div class="actions">
          <%= f.submit t('.send_me_reset_password_instructions'), class: "bg-blue-700 hover:bg-blue-600 text-white rounded px-4 py-2" %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-center">
      <%= link_to t('.sign_in'), new_session_path(resource_name), class: "bg-gray-600 hover:bg-gray-500 text-white rounded px-4 py-2 block mr-2" %>
      <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "bg-gray-600 hover:bg-gray-500 text-white rounded px-4 py-2 block ml-2" %>
    </div>
  </div>
</div>
